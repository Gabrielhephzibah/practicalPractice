<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    tools:context=".customview.CompoundViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">



    <com.cherish.practicalpractice.customview.MyCompoundView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:image="@drawable/super_mario"
        app:text="This is super mario"
        />

    <com.cherish.practicalpractice.customview.MyCompoundView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:image="@drawable/ic_beach_access"
        app:text="This is super mario"
        />

    <com.cherish.practicalpractice.customview.MyCompoundView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:image="@drawable/messages"
        app:text="This is super mario"
        />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>